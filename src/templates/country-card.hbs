{{#each this}}
<li class="countries__item list">
  <article class="card">
    <img
      src="{{ flag }}"
      alt="{{name}}"
      class="country__image"
      width= "100%";
    />
    <div class="card__country">
      <h2 class="country__name">Name: {{name}}</h2>
      <p class="country_capital">Capital: {{capital}}</p>

      <p class="country_population">
       Population: {{population}} 
      </p>

      <ul class="languages-list">Languages:
        {{#each languages}}
        <li class="languages_item list">{{this.name}}</li>
        {{/each}}
      </ul>
    </div>

   
  </article>
</li>
{{/each}}